<% @tweets.order(created_at: :desc).each do |tweet|%>
  <li class="tweet clearfix">
    <%= user_avatar(tweet.user)%>
      <div class="content">
        <div class="user">
          <%= link_to tweet.user.first_name + ' ' + tweet.user.last_name, user_path(tweet.user.id)%>
        </div>
        <div class="tweet-content"><%= tweet.text %></div>
        <div class="tweet-footer">
          <posted><%= time_ago_in_words(tweet.updated_at) %></posted>
          <div class="tweet-actions", data-confirm="Are you sure?">
            <%= link_to 'Delete', tweet_path(tweet[:id]), method: :delete, data: {confirm: 'Are you sure?'} if tweet.user == current_user %>
          </div>
        </div>
      </div>
  </li>
<%end%>
<%= will_paginate @tweets%>

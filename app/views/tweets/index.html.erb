<div class="timeline">
  <h2 class="title">Tweets</h2>
  <ol class="tweets">
  <% @tweets.each do |tweet|%>
    <li class="tweet clearfix">
      <%= link_to ( image_tag tweet.user.avatar.url(:mini), class: 'gravatar'), user_path(tweet.user_id) if tweet.user.avatar?%>
      <div class="content">
        <div class="user">
          <%= link_to tweet.user.first_name + ' ' +User.find(tweet.user_id).last_name, user_path(tweet.user_id)%>
        </div>
        <div class="tweet-content"><%= tweet.text %></div>
        <div class="tweet-footer">
          <posted><%= time_ago_in_words(tweet.updated_at) %></posted>
          <div class="tweet-actions", data-confirm="Are you sure?">
            <% if current_user.id == tweet.user_id %>
              <%=link_to 'Delete', tweet_path(tweet[:id]),  method: :delete, data: {confirm: 'Are you sure?'} %>

            <% end %>
          </div>
        </div>
      </div>
    </li>

  <%end%>

  </ol>
</div>
